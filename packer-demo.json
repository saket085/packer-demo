  "builders": [{
    "type": "amazon-ebs",
#    "access_key": "{{user `aws_access_key`}}",
#    "secret_key": "{{user `aws_secret_key`}}",
    "role_arn"    :  "arn:aws:iam::742818135316:role/jenkins-role",
    "region": "eu-west-2",
    "source_ami": "ami-09a2a0f7d2db8baca",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-nodejs-demo {{timestamp}}"
  }],
  "provisioners": [
  {
    "type": "file",
    "source": "app",
    "destination": "/tmp/app"
  },
  {
    "type": "shell",
    "scripts": [  "scripts/deploy.sh"   ],
    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
    "pause_before": "10s"
  }]
}
